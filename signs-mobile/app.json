{
  "expo": {
    "name": "Review Signs NFC Programmer",
    "slug": "signs-mobile",
    "version": "1.0.1",
    "orientation": "portrait",
    "runtimeVersion": "1.0.0",
    "sdkVersion": "54.0.0",
    "icon": "./assets/icon.png",
    "primaryColor": "#3B82F6",
    "description": "Write NFC tags for business review collection with Google Maps integration. Mobile app for sales staff to manage customer feedback systems.",
    "githubUrl": "https://github.com/dannyallport77/signs-mobile",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NFCReaderUsageDescription": "This app needs NFC to write business review links to NFC tags",
        "NSLocationWhenInUseUsageDescription": "This app needs your location to find nearby businesses",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": ["TAG"]
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDDfyo07pPKa4DYzWdkkVWAQYuba_T3zqo"
      },
      "bundleIdentifier": "com.dannyallport.signsnfc",
      "buildNumber": "10",
      "appStoreUrl": "https://apps.apple.com/app/review-signs-nfc-programmer/id6755160639"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "NFC",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.NFC"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDDfyo07pPKa4DYzWdkkVWAQYuba_T3zqo"
        }
      },
      "package": "com.anonymous.signsmobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Signs NFC Writer to use your location to find nearby businesses."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "6870076a-f22c-4acc-bb44-34f08072d01e"
      }
    }
  }
}
