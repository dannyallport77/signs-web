// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id                    String    @id @default(cuid())
  name                  String?
  email                 String    @unique
  emailVerified         DateTime?
  password              String
  role                  String    @default("user") // admin, user
  active                Boolean   @default(true)
  resetToken            String?   @unique
  resetTokenExpiry      DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  accounts              Account[]
  sessions              Session[]
  stockMovements        StockMovement[]
  transactions          Transaction[]
  userInventory         UserInventory[]
  mobileDevices         MobileDevice[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Stock Control
model StockItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  sku         String   @unique
  quantity    Int      @default(0)
  minQuantity Int      @default(10)
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  movements   StockMovement[]
}

model StockMovement {
  id          String   @id @default(cuid())
  stockItemId String
  userId      String
  type        String   // "in", "out", "adjustment"
  quantity    Int
  reason      String?
  notes       String?
  createdAt   DateTime @default(now())
  
  stockItem   StockItem @relation(fields: [stockItemId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NFC Tags (for tracking written tags)
model NFCTag {
  id              String   @id @default(cuid())
  businessName    String
  businessAddress String?
  placeId         String
  reviewUrl       String?
  latitude        Float?
  longitude       Float?
  writtenAt       DateTime @default(now())
  writtenBy       String?  // User who wrote the tag
}

model ReviewPlatformMenu {
  id              String             @id @default(cuid())
  slug            String             @unique
  businessName    String
  businessAddress String?
  placeId         String?
  heroTitle       String?
  heroSubtitle    String?
  logoUrl         String?
  // Optional WiFi credentials
  wifiSsid        String?
  wifiPassword    String?
  wifiSecurity    String?
  websiteUrl      String?
  appDownloadUrl  String?   // Legacy field - kept for backward compatibility
  appStoreType    String?   // Legacy field - kept for backward compatibility
  appDownloadUrlApple  String?
  appDownloadUrlGoogle String?
  // Optional fruit machine promotion
  promotionId     String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  platforms       ReviewPlatform[]
}

model ReviewPlatform {
  id          String              @id @default(cuid())
  menuId      String
  platformKey String
  name        String
  url         String
  enabled     Boolean             @default(true)
  order       Int                 @default(0)
  icon        String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  menu        ReviewPlatformMenu  @relation(fields: [menuId], references: [id], onDelete: Cascade)
  clicks      ReviewPlatformClick[]

  @@index([menuId])
}

model ReviewPlatformClick {
  id              String    @id @default(cuid())
  menuId          String
  platformId      String
  timestamp       DateTime  @default(now())
  userAgent       String?
  ipAddress       String?
  referrer        String?
  reviewSubmitted Boolean   @default(false)
  metadata        String?   // JSON string for additional data
  createdAt       DateTime  @default(now())
  platform        ReviewPlatform @relation(fields: [platformId], references: [id], onDelete: Cascade)

  @@index([menuId])
  @@index([platformId])
  @@index([timestamp])
}

// Sign Types for Products
model SignType {
  id            String          @id
  name          String
  description   String?
  defaultPrice  Float
  isActive      Boolean         @default(true)
  imageUrl      String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  transactions  Transaction[]
  userInventory UserInventory[]
}

model Transaction {
  id              String    @id
  userId          String
  businessName    String
  businessAddress String?
  placeId         String
  reviewUrl       String
  salePrice       Float?
  notes           String?
  locationLat     Float
  locationLng     Float
  erasedAt        DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime
  programmedAt    DateTime  @default(now())
  signTypeId      String
  status          String
  signType        SignType  @relation(fields: [signTypeId], references: [id])
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserInventory {
  id          String   @id
  userId      String
  signTypeId  String
  quantity    Int      @default(0)
  lastUpdated DateTime @default(now())
  signType    SignType @relation(fields: [signTypeId], references: [id])
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, signTypeId])
}

// Invoice Management
model Invoice {
  id              String         @id @default(cuid())
  invoiceNumber   String         @unique
  customerEmail   String
  customerName    String
  businessId      String?
  totalAmount     Float
  status          String         @default("sent") // sent, viewed, paid, cancelled
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  sentAt          DateTime       @default(now())
  // Email tracking
  emailOpenedAt   DateTime?
  emailOpened     Boolean        @default(false)
  trackingToken   String?        @unique @default(cuid())
  openCount       Int            @default(0)
  lastOpenedAt    DateTime?
  
  items           InvoiceItem[]
  opens           InvoiceOpen[]
}

model InvoiceOpen {
  id              String         @id @default(cuid())
  invoiceId       String
  openedAt        DateTime       @default(now())
  userAgent       String?
  ipAddress       String?
  
  invoice         Invoice        @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  @@index([invoiceId])
  @@index([openedAt])
}

model InvoiceItem {
  id              String    @id @default(cuid())
  invoiceId       String
  productId       String
  productName     String
  quantity        Int
  unitPrice       Float
  totalPrice      Float
  createdAt       DateTime  @default(now())
  
  invoice         Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  @@index([invoiceId])
}

// E-commerce Product Catalog (New)
model Product {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  costPrice   Float    // What you pay (AliExpress price)
  sellingPrice Float   // What customer pays
  images      String[]
  videoUrl    String?
  sku         String?  @unique
  barcode     String?
  
  aliexpressUrl String?
  
  isActive    Boolean  @default(true)
  category    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  variants    ProductVariant[]
  options     ProductOption[]
}

model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  name        String
  costPrice   Float
  sellingPrice Float
  sku         String?
  inventory   Int      @default(0)
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductOption {
  id          String   @id @default(cuid())
  productId   String
  name        String   // e.g., "Size", "Color"
  values      String[] // e.g., ["Small", "Medium", "Large"]
  
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Promotion {
  id             String   @id @default(cuid())
  placeId        String
  businessName   String
  prizeType      String   @default("gift")
  giftName       String?
  giftEmoji      String?
  giftValue      String?
  defaultWinOdds Float    @default(0.004)
  enabled        Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Social Media Cache
model SocialMediaCache {
  id              String   @id @default(cuid())
  businessName    String
  address         String?
  website         String?
  data            String   @db.Text // JSON string of SocialMediaLinks
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  
  @@unique([businessName, address, website])
  @@index([expiresAt])
}

// System Settings
model SystemSettings {
  id                    String  @id @default(cuid())
  key                   String  @unique
  value                 String  @db.Text
  description           String?
  type                  String  @default("string") // string, boolean, number, json
  updatedAt             DateTime @updatedAt
}

// Smart Links (Redirectable Tags)
model SmartLink {
  id          String   @id @default(cuid())
  slug        String   @unique // Short code for the URL
  targetUrl   String   // Where it goes
  name        String?  // e.g. "Google Review - Front Desk"
  businessName String
  placeId     String
  active      Boolean  @default(true)
  suspended   Boolean  @default(false) // "suspend it temporarily"
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  scans       SmartLinkScan[]
}

model SmartLinkScan {
  id          String    @id @default(cuid())
  smartLinkId String
  timestamp   DateTime  @default(now())
  userAgent   String?
  ipAddress   String?
  referrer    String?
  
  smartLink   SmartLink @relation(fields: [smartLinkId], references: [id], onDelete: Cascade)
  
  @@index([smartLinkId])
  @@index([timestamp])
}

// Pre-programmed NFC Tags (Tags with unique IDs that can be linked to businesses later)
model PreprogrammedTag {
  id              String   @id @default(cuid())
  tagUid          String   @unique // Unique ID written to the NFC tag
  slug            String   @unique // Short URL slug for redirect
  status          String   @default("unlinked") // unlinked, linked, deactivated
  
  // Business info (filled when linked)
  businessName    String?
  businessAddress String?
  placeId         String?
  targetUrl       String?  // Review URL when linked
  
  // Tracking
  programmedBy    String?  // User who programmed the tag
  programmedAt    DateTime @default(now())
  linkedAt        DateTime?
  linkedBy        String?  // User who linked it to a business
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  scans           PreprogrammedTagScan[]
  
  @@index([status])
  @@index([placeId])
}

model PreprogrammedTagScan {
  id                  String   @id @default(cuid())
  preprogrammedTagId  String
  timestamp           DateTime @default(now())
  userAgent           String?
  ipAddress           String?
  referrer            String?
  wasLinked           Boolean  @default(false) // Was the tag linked at time of scan?
  
  tag                 PreprogrammedTag @relation(fields: [preprogrammedTagId], references: [id], onDelete: Cascade)
  
  @@index([preprogrammedTagId])
  @@index([timestamp])
}

// Fruit Machine Promotions & Results
model FruitMachinePromotion {
  id                  String   @id @default(cuid())
  businessId          String
  placeId             String?  // Added for NFC lookup
  name                String
  description         String?  @db.Text
  prizes              Json?    // Store PrizeOption[]
  monthlyBudget       Float?
  winProbability      Float    @default(20) // Percentage
  enabled             Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  results             FruitMachineResult[]
  
  @@index([businessId])
  @@index([placeId])
  @@index([enabled])
}

model FruitMachineResult {
  id                  String   @id @default(cuid())
  promotionId         String
  businessId          String
  placeId             String?
  winnerCode          String   @unique
  prizeType           String   // gift, cash, spins, credit, merchandise
  prizeName           String
  prizeValue          String?  // For cash prizes, value in currency
  isWin               Boolean  @default(false)
  timestamp           DateTime @default(now())
  createdAt           DateTime @default(now())
  
  promotion           FruitMachinePromotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  
  @@index([businessId])
  @@index([promotionId])
  @@index([timestamp])
  @@index([isWin])
}

// Mobile Device Registration for NFC Programming
model MobileDevice {
  id            String   @id @default(cuid())
  deviceId      String   @unique // UUID from mobile app
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  deviceName    String   // iPhone 14 Pro, etc
  appVersion    String
  osVersion     String
  
  isActive      Boolean  @default(true)
  lastHeartbeat DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relationships
  nfcTasks      NFCProgrammingTask[]
  
  @@index([userId])
  @@index([isActive])
  @@index([lastHeartbeat])
}

model NFCProgrammingTask {
  id              String   @id @default(cuid())
  deviceId        String
  device          MobileDevice @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  
  businessId      String
  promotionId     String?  // Link to fruit machine or other promotion
  
  // NFC data to write
  taskType        String   // "write_fruit_machine", "write_wifi", "write_smart_link", etc
  nfcData         Json     // The actual data to write to tag
  
  // Status tracking
  status          String   @default("pending") // pending, acknowledged, writing, completed, failed
  attemptCount    Int      @default(0)
  lastError       String?
  
  createdAt       DateTime @default(now())
  acknowledgedAt  DateTime?
  completedAt     DateTime?
  
  @@index([deviceId])
  @@index([status])
  @@index([createdAt])
}

// Email Inbox
model Email {
  id          String   @id @default(cuid())
  from        String   // Sender email address
  fromName    String?  // Sender name
  to          String   // Recipient email address
  subject     String
  textBody    String?  @db.Text // Plain text body
  htmlBody    String?  @db.Text // HTML body
  isRead      Boolean  @default(false)
  isStarred   Boolean  @default(false)
  isArchived  Boolean  @default(false)
  attachments Json?    // Array of attachment metadata
  headers     Json?    // Email headers
  receivedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  
  @@index([isRead])
  @@index([isArchived])
  @@index([receivedAt])
}

